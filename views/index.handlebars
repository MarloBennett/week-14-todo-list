<h1>To-Do List</h1>

<h2>Tasks to do</h2>

<ul>
  {{#each toDoList}}
    {{#unless isDone}}
      <li>
        {{itemName}}

        <form action="toDoList/updateOne/{{id}}?_method=PUT" method="POST">
          <input type="hidden" name="isDone" value="true">
          <button type="submit">Done!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Tasks that are done</h2>

<ul>
  {{#each toDoList}}
    {{#if isDone}}
      <li>
        {{itemName}}
        
      </li>
    {{/if}}
  {{/each}}
</ul>